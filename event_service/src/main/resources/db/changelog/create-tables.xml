<?xml version="1.0" encoding="UTF-8" ?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                           http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <!--  halls  -->
    <changeSet id="create_table_halls-1" author="Vladimir">
        <createTable tableName="halls">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="capacity" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!--  movies  -->
    <changeSet id="create_table_movies-1" author="Vladimir">
        <createTable tableName="movies">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="duration_in_min" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <!--  schedule  -->
    <changeSet id="create_table_schedule-1" author="Vladimir">
        <createTable tableName="schedule">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="movie_id" type="bigint">
                <constraints nullable="false" foreignKeyName="schedule_movies" references="movies(id)"/>
            </column>
            <column name="hall_id" type="bigint">
                <constraints nullable="false" foreignKeyName="schedule_halls" references="halls(id)"/>
            </column>
            <column name="start_time" type="timestamp">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>